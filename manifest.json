{
    "manifest_version": 3,
    "name": "Buggy Translate Chrome",
    "version": "1.0.0",
    "description": "A Chrome extension to translate words selected on web pages",
    "homepage_url": "https://github.com/qinglangee/buggy-translate",
    "icons": {
        "48": "icons/bug-48.png",
        "96": "icons/bug-96.png"
    },

    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "*://dict.youdao.com/*",
        "*://www.baidu.com/*",
        "*://cn.bing.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["lib/jquery-3.2.1.min.js",
                "src/string_utils.js",
                "src/zhchlog.js",
                "src/dict_view.js",
                "src/dictionary.js",
                "src/init.js"],
            "css": ["src/dictionary.css"],
            "run_at": "document_start"
        }
    ],

    "options_ui": {
        "page": "option/option.html"
    },

    "action": {
        "default_icon": "icons/bug-32.png",
        "default_title": "Buggy Translate",
        "default_popup": "popup/quick_search.html"
    },
    "background": {
        "service_worker": "src/background-script.js"
    },

    "web_accessible_resources": [
        {
            "resources": [
                "html/component.html",
                "imgs/remind.png"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}
